<!-- Nav Item - Menu Phân loại sản phẩm -->
@{
    List<milkTea.Models.Category> categories = new milkTea.Models.ModelController.ProductModel().allCategory();

}
@foreach (var item in categories)
{
    <li class="nav-item">
        <a class="nav-link collapsed" href="@Url.Action("Category", "Home", new { cat = item.CatId })">
            <i class="fas fa-star"></i>
            <span>@item.CatName</span>
        </a>
    </li>
}
