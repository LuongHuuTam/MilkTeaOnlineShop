@model milkTea.Models.User_Accounts

@{
    Layout = null;
}

<!DOCTYPE html> 
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Register</title>

    <!-- Custom fonts for this template-->
    <link href="~/Assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/Assets/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body class="bg-gradient-primary">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-8 col-lg-6 col-md-6 col-sm-4 col-3">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Đăng kí tài khoản !!!</h1>
                            </div>
                            @using (Html.BeginForm("registeraccount", "login", FormMethod.Post))
                            {
                                @Html.ValidationSummary(true, null, new { @class = "text-danger" })
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        @Html.TextBoxFor(Model => Model.FirstName, new { @class = "form-control form-control-user", @placeholder = "Họ" })
                                    </div>
                                    <div class="col-sm-6">
                                        @Html.TextBoxFor(Model => Model.LastName, new { @class = "form-control form-control-user", @placeholder = "Tên" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(Model => Model.PhoneNumber, new { @class = "form-control form-control-user", @placeholder = "Số điện thoại" })

                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(Model => Model.Address, new { @class = "form-control form-control-user", @placeholder = "Địa chỉ" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(Model => Model.Email, new { @class = "form-control form-control-user", @placeholder = "Email" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(Model => Model.Username, new { @class = "form-control form-control-user", @placeholder = "Tên đăng nhập" })
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        @Html.TextBoxFor(Model => Model.Password, new { @type = "password", @class = "form-control form-control-user", @placeholder = "Mật khẩu" })
                                    </div>
                                    <div class="col-sm-6">
                                        <div >
                                            <input type="password" name="rePass" class="form-control form-control-user" placeholder = "Nhập Lại mật khẩu" />
                                        </div>
                                    </div>
                                </div>
                                <button class="btn btn-primary btn-user btn-block">Đăng kí</button>
                            }
                           <hr>
                            @using (Html.BeginForm("index", "login", FormMethod.Get))
                            {
                                <div class="text-center">
                                    <button type="submit" class="small btn btn-link btn-user">Bạn đã có tài khoản! Trở về đăng nhập</button>

                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/Assets/vendor/jquery/jquery.min.js"></script>
    <script src="~/Assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Assets/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
</body>
</html>